{
  "name": "ddaniel/docker-wp",
  "description": "Pack of features for WordPress development in Docker",
  "type": "template",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Docker\\WP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Docker\\WP\\": "tests/tests"
    }
  },
  "authors": [
    {
      "name": "Daniel Dubchenko"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "phpunit/phpunit": "^9",
    "yoast/phpunit-polyfills": "^3",
    "squizlabs/php_codesniffer": "^3.11",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.1",
    "rector/rector": "^2.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "phpcs": "bash ./bin/phpcs.sh",
    "phpcs:full": "bash ./bin/phpcs.sh -full",
    "phpcs:fix": "bash ./bin/phpcs.sh -fix",
    "rector:dry": "vendor/bin/rector --dry-run",
    "rector:fix": "vendor/bin/rector"
  }
}
